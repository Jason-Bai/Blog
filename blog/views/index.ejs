<%- include header %>
<% if(posts) { posts.forEach(function (post, index) {  %>
    <p><h2><a href="/p/<%= post._id %>"><%= post.title %></a></h2><a href="/u/<%= post.name %>"><img src="<%= post.head %>" alt="not found" class="r_head"/></a></p>
    <p class="info">
         Author : <a href="/u/<%= post.name %>"><%= post.name %></a>|
         Date : <%= post.time.minute %> | 
         Tags :
         <% if(post.tags) {  post.tags.forEach(function (tag, index) { %>
             <% if (tag) {  %>
                 <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
             <% } %>
         <% })} %>
         <% if (post.reprint_info && post.reprint_info.reprint_from) { %>
             <br/><a href="/p/<%= post.reprint_info.reprint_from.name %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title %>">srouce article</a>
         <% } %>
    </p>
    <%- post.post %>
    <p class="info">
    Access Times : <%= post.pv ? post.pv : 0 %> | 
    Comment Times : <%= post.comments.length == 0 ? 0 : post.comments.length %> | 
    Repeat Times :
    <% if(post.reprint_info && post.reprint_info.reprint_to) { %>
        <%= post.reprint_info.reprint_to.length %>
    <% } else { %>
        <%= 0 %>
    <% } %>
</p>
<% }) } %>
<%- include paging %>
<%- include footer %>
